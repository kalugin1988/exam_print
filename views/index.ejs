    <script>
        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const modeRadios = document.querySelectorAll('input[name="mode"]');
        const classroomField = document.getElementById('classroomField');
        const classroomSelect = document.getElementById('classroom');
        const subjectSelect = document.getElementById('subject');
        
        // –ö–Ω–æ–ø–∫–∏ –¥–ª—è —Ä–∞–∑–Ω—ã—Ö —Ä–µ–∂–∏–º–æ–≤
        const singleButtons = document.querySelectorAll('.btn-primary, .btn-info, .btn-purple');
        const allButtons = document.querySelectorAll('.btn-success, .btn-info.hidden, .btn-purple.hidden');

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('exam_date').value = today;
            loadAllSubjects();
        });

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ä–µ–∂–∏–º–∞
        modeRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.value === 'all') {
                    classroomField.style.opacity = '0.6';
                    classroomField.style.pointerEvents = 'none';
                    toggleButtons(true);
                    loadAllSubjects();
                } else {
                    classroomField.style.opacity = '1';
                    classroomField.style.pointerEvents = 'auto';
                    toggleButtons(false);
                    if (classroomSelect.value) {
                        loadSubjectsForClassroom(classroomSelect.value);
                    }
                }
            });
        });

        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –∫–Ω–æ–ø–æ–∫ –º–µ–∂–¥—É —Ä–µ–∂–∏–º–∞–º–∏
        function toggleButtons(isAllMode) {
            singleButtons.forEach(btn => {
                btn.classList.toggle('hidden', isAllMode);
            });
            allButtons.forEach(btn => {
                btn.classList.toggle('hidden', !isAllMode);
            });
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –ø—Ä–µ–¥–º–µ—Ç–æ–≤ –¥–ª—è –∞—É–¥–∏—Ç–æ—Ä–∏–∏
        function loadSubjectsForClassroom(classroom) {
            fetch(`/api/subjects/${classroom}`)
                .then(response => response.json())
                .then(subjects => {
                    updateSubjectSelect(subjects);
                })
                .catch(error => {
                    console.error('–û—à–∏–±–∫–∞:', error);
                    showError('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø—Ä–µ–¥–º–µ—Ç–æ–≤');
                });
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ –≤—Å–µ—Ö –ø—Ä–µ–¥–º–µ—Ç–æ–≤
        function loadAllSubjects() {
            fetch('/api/all-subjects')
                .then(response => response.json())
                .then(subjects => {
                    updateSubjectSelect(subjects);
                })
                .catch(error => {
                    console.error('–û—à–∏–±–∫–∞:', error);
                    showError('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø—Ä–µ–¥–º–µ—Ç–æ–≤');
                });
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–ø–∏—Å–∫–∞ –ø—Ä–µ–¥–º–µ—Ç–æ–≤
        function updateSubjectSelect(subjects) {
            subjectSelect.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–µ–¥–º–µ—Ç</option>';
            subjects.forEach(subject => {
                const option = document.createElement('option');
                option.value = subject;
                option.textContent = subject;
                subjectSelect.appendChild(option);
            });
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è –∞—É–¥–∏—Ç–æ—Ä–∏–∏
        classroomSelect.addEventListener('change', function() {
            if (this.value && document.querySelector('input[name="mode"]:checked').value === 'single') {
                loadSubjectsForClassroom(this.value);
            }
        });

        // –§—É–Ω–∫—Ü–∏–∏ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤
        function generateSingleStatement() {
            const formData = getFormData();
            if (!formData) return;
            if (!formData.classroom) {
                showError('–í—ã–±–µ—Ä–∏—Ç–µ –∞—É–¥–∏—Ç–æ—Ä–∏—é');
                return;
            }
            window.open(`/generate?classroom=${formData.classroom}&subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}`, '_blank');
        }

        function generateAllStatements() {
            const formData = getFormData();
            if (!formData) return;
            window.open(`/generate?subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}&all_classrooms=true`, '_blank');
        }

        function generateAccompanyingSheet() {
            const formData = getFormData();
            if (!formData) return;
            if (!formData.classroom) {
                showError('–í—ã–±–µ—Ä–∏—Ç–µ –∞—É–¥–∏—Ç–æ—Ä–∏—é');
                return;
            }
            window.open(`/accompanying-sheet?classroom=${formData.classroom}&subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}`, '_blank');
        }

        function generateAllAccompanyingSheets() {
            const formData = getFormData();
            if (!formData) return;
            window.open(`/accompanying-sheet?subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}&all_classrooms=true`, '_blank');
        }

        function generateRegistrationList() {
            const formData = getFormData();
            if (!formData) return;
            if (!formData.classroom) {
                showError('–í—ã–±–µ—Ä–∏—Ç–µ –∞—É–¥–∏—Ç–æ—Ä–∏—é');
                return;
            }
            window.open(`/registration-list?classroom=${formData.classroom}&subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}`, '_blank');
        }

        function generateAllRegistrationLists() {
            const formData = getFormData();
            if (!formData) return;
            window.open(`/registration-list?subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}&all_classrooms=true`, '_blank');
        }

        function generateGeneralStatement() {
            const formData = getFormData();
            if (!formData) return;
            window.open(`/general-statement?subject=${formData.subject}&exam_date=${formData.exam_date}&site_code=${formData.site_code}`, '_blank');
        }

        function generateTransferAct() {
            const formData = getFormData();
            if (!formData) return;
