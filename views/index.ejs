        }

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function getFormData() {
            const subject = subjectSelect.value;
            const exam_date = document.getElementById('exam_date').value;
            const site_code = document.getElementById('site_code').value;
            const classroom = classroomSelect.value;
            
            if (!subject || !exam_date || !site_code) {
                showError('–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è: –ø—Ä–µ–¥–º–µ—Ç, –¥–∞—Ç–∞ –∏ –∫–æ–¥ –ø–ª–æ—â–∞–¥–∫–∏');
                return null;
            }
            
            return { subject, exam_date, site_code, classroom };
        }

        function showError(message) {
            alert('‚ùå ' + message);
        }
    </script>
