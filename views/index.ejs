                        <select id="classroom" name="classroom">
                            <option value="">–í—ã–±–µ—Ä–∏—Ç–µ –∞—É–¥–∏—Ç–æ—Ä–∏—é</option>
                            <% classrooms.forEach(classroom => { %>
                                <option value="<%= classroom.–Ω–æ–º–µ—Ä_–∫–∞–±–∏–Ω–µ—Ç–∞ %>">
